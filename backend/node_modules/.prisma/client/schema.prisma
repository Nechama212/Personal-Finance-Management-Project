generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  Email          String          @id @unique
  UserName       String
  Password       String
  Language       String
  emailVerified  Boolean         @default(false)
  analytics      Analytics[]
  categories     Category[]
  expenses       Expense[]
  incomes        Income[]
  monthlyBudgets MonthlyBudget[]
  savingGoals    SavingGoal[]
}

model Category {
  CategoryID     Int             @id @default(autoincrement())
  CategoryName   String          @unique
  Email          String          @default("default@example.com")
  analytics      Analytics[]
  User           User            @relation(fields: [Email], references: [Email])
  expenses       Expense[]
  incomes        Income[]
  monthlyBudgets MonthlyBudget[]
}

model Expense {
  ExpenseID    Int      @id @default(autoincrement())
  Email        String
  Amount       Float
  Date         DateTime
  CategoryName String
  Description  String?
  Category     Category @relation(fields: [CategoryName], references: [CategoryName])
  User         User     @relation(fields: [Email], references: [Email])

  @@index([Email])
  @@index([CategoryName])
}

model Income {
  IncomeID     Int      @id @default(autoincrement())
  Email        String
  Amount       Float
  Date         DateTime
  CategoryName String
  Description  String?
  Category     Category @relation(fields: [CategoryName], references: [CategoryName])
  User         User     @relation(fields: [Email], references: [Email])

  @@index([Email])
  @@index([CategoryName])
}

model SavingGoal {
  GoalID      Int      @id @default(autoincrement())
  Email       String
  Amount      Float
  SavedAmount Float
  TargetDate  DateTime
  Description String?
  User        User     @relation(fields: [Email], references: [Email])

  @@index([Email])
}

model MonthlyBudget {
  BudgetID     Int      @id @default(autoincrement())
  Email        String
  CategoryName String
  BudgetAmount Float
  SpentAmount  Float
  BudgetMonth  DateTime
  Category     Category @relation(fields: [CategoryName], references: [CategoryName])
  User         User     @relation(fields: [Email], references: [Email])

  @@index([Email])
  @@index([CategoryName])
}

model Analytics {
  AnalyticsID   Int      @id @default(autoincrement())
  CategoryName  String
  Metric        String
  Value         Float
  Date          DateTime
  Email         String
  emailVerified Boolean  @default(false)
  Category      Category @relation(fields: [CategoryName], references: [CategoryName])
  User          User     @relation(fields: [Email], references: [Email])
}
