datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  Email    String @id @unique
  UserName String
  Password String
  Language String

  expenses       Expense[]
  incomes        Income[]
  savingGoals    SavingGoal[]
  monthlyBudgets MonthlyBudget[]
  analytics      Analytics[]
  categories     Category[]
}

model Category {
  CategoryID   Int    @id @default(autoincrement())
  CategoryName String @unique
  Email        String @default("default@example.com")

  expenses       Expense[]
  incomes        Income[]
  monthlyBudgets MonthlyBudget[]

  User User @relation(fields: [Email], references: [Email])
}

model Expense {
  ExpenseID    Int      @id @default(autoincrement())
  Email        String
  Amount       Float
  Date         DateTime
  CategoryName String
  Description  String?

  User     User     @relation(fields: [Email], references: [Email])
  Category Category @relation(fields: [CategoryName], references: [CategoryName])

  @@index([Email])
  @@index([CategoryName])
}

model Income {
  IncomeID     Int      @id @default(autoincrement())
  Email        String
  Amount       Float
  Date         DateTime
  CategoryName String
  Description  String?

  User     User     @relation(fields: [Email], references: [Email])
  Category Category @relation(fields: [CategoryName], references: [CategoryName])

  @@index([Email])
  @@index([CategoryName])
}

model SavingGoal {
  GoalID      Int      @id @default(autoincrement())
  Email       String
  Amount      Float
  SavedAmount Float
  TargetDate  DateTime
  Description String?

  User User @relation(fields: [Email], references: [Email])

  @@index([Email])
}

model MonthlyBudget {
  BudgetID     Int      @id @default(autoincrement())
  Email        String
  CategoryName String
  BudgetAmount Float
  SpentAmount  Float
  BudgetMonth  DateTime

  User     User     @relation(fields: [Email], references: [Email])
  Category Category @relation(fields: [CategoryName], references: [CategoryName])

  @@index([Email])
  @@index([CategoryName])
}

model Analytics {
  AnalyticsID  Int      @id @default(autoincrement())
  CategoryName String
  Data         String
  Date         DateTime
  Email        String

  User User @relation(fields: [Email], references: [Email])
}
